<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/settings_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="@string/settings_volume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/settings_volume_seek_bar"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@+id/settings_volume"
        app:layout_constraintTop_toTopOf="@+id/settings_volume" />

    <TextView
        android:id="@+id/settings_dark_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/setting_dark_mode"
        app:layout_constraintStart_toStartOf="@+id/settings_volume"
        app:layout_constraintTop_toBottomOf="@+id/settings_volume" />

    <Switch
        android:id="@+id/settings_dark_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@+id/settings_dark_mode"
        app:layout_constraintTop_toTopOf="@+id/settings_dark_mode"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</androidx.constraintlayout.widget.ConstraintLayout>